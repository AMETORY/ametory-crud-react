import { TOKEN } from "../../../utils/constants";
import { asyncLocalStorage } from "../../../utils/helper";

export const getAll<%= toPascalCase(entity) %>s = async () => {
  const response = await fetch(`${process.env.REACT_APP_API_URL}/api/v1/<%= toPascalCase(entity) %>`,{
    headers: {
      Authorization: `Bearer ${await (asyncLocalStorage.getItem(TOKEN))}`,
    },
  });
  return (await response.json()).data;
};

export const getOne<%= toPascalCase(entity) %> = async (id: string) => {
  const response = await fetch(`${process.env.REACT_APP_API_URL}/api/v1/<%= toPascalCase(entity) %>/${id}`,{
    headers: {
      Authorization: `Bearer ${await (asyncLocalStorage.getItem(TOKEN))}`,
    },
  });
  return (await response.json()).data;
};

export const create<%= toPascalCase(entity) %> = async (data: any) => {
  const response = await fetch(`${process.env.REACT_APP_API_URL}/api/v1/<%= toPascalCase(entity) %>`, {
    method: "POST",
    body: JSON.stringify(data),
    headers: {
      Authorization: `Bearer ${await (asyncLocalStorage.getItem(TOKEN))}`,
    },
  });
  return response.json();
};

