export const loginPost = async (data: any) => {
  const response = await fetch(
    `${process.env.REACT_APP_API_URL}/api/v1/Auth/Login`,
    {
      method: "POST",
      body: JSON.stringify(data),
    }
  );
  return response.json();
};

